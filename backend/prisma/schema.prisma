// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id    Int    @id @default(autoincrement())
    uname String @unique
    pwd   String // 密码哈希
    role  Role   @default(normal)
    point Int    @default(0)
}

enum Role {
    admin
    normal
}
