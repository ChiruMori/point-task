{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true, // 生成 .d.ts 类型声明文件
    "declarationMap": true, // 生成 .d.ts.map 文件，方便跳转到源码
    "sourceMap": true, // 生成 .js.map
    "composite": true, // 将此项目标记为可被引用的复合项目

    "outDir": "dist", // 编译输出目录
    "rootDir": "src" // 源码根目录
  },
  "include": ["src/**/*"], // 只编译 src 目录下的文件
  "exclude": ["node_modules", "dist"]
}
